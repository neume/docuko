<% breadcrumb :instances, @data_model %>

<h5><%= @data_model.name %> Instances</h5>
<div class="card">
  <div class="card-body">
    <div class="row mb-2">
      <div class="col-sm-5">
        <%= link_to new_office_data_model_instance_path(@data_model.id, office_slug: current_office.slug), class: 'btn btn-info btn-sm' do %>
          <i class="fa fa-circle-plus mr-1"></i> Add
        <% end %>
      </div>
      <div class="col-sm-7">
        <%= link_to "Import", '#', class: 'float-end btn btn-light' %>
      </div>
    </div>
    <table class='table table-striped'>
      <thead>
        <tr>
          <% @properties.each do |property| %>
            <th><%= property.name %></th>
          <% end %>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @instances.each do |instance| %>
          <tr>
            <% props = instance.hashed_properties %>
            <% @properties.each do |property| %>
              <td><%= props[property.code] %></td>
            <% end %>
            <td>
              <%= link_to [current_office, instance], class: 'me-2' do %>
                <i class="fa-solid fa-eye"></i>
              <% end %>
              <%= link_to [:edit, current_office, instance] do %>
                <i class="fa fa-pen-to-square"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
