<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <%= form_for model_property, url: url, remote: remote  do |f| %>
      <div class="modal-header">
        <h5 class='modal-title'> Create new <%= @data_model.name %>'s Property </h5>
      </div>
      <div class="modal-body">
        <% if model_property.errors.count.positive? %>
          <div class='error'>
            <% model_property.errors.each do |error| %>
              <div class="alert alert-danger">
                <%= error.full_message %>
              </div>
            <% end %>
        <% end %>
        <%= render "form_fields", f: f %>
      </div>
    <% end %>
  </div>
</div>
