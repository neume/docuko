<div class="card">
  <div class="card-body">
    <div class="row mb-2">
      <div class="col-sm-8">
        <%= link_to [:new, office, data_model, :template], class: 'btn btn-info btn-sm' do %>
          <i class="fa fa-circle-plus me-1"></i> New Template
        <% end %>
      </div>
    </div>
    <table class='table table-striped table-borderless table-hover'>
      <tbody>
        <% templates.each do |template| %>
          <tr>
            <td>
              <div class="row">
                <span class='ml-3 text-wrap'>
                  <b>
                    <%= link_to template.name, office_template_path(template.id, office_slug: office.slug), class: 'text-primary' %>
                  </b>
                  <br/>
                  <div>
                    <%= template.description %>
                  </div>
                </span>
            </td>

            <td class='pe-1 text-end'>
              <%= link_to [:edit, office, template], class: 'no-decoration me-1' do %>
                <i class="fa fa-pen-to-square text-warning"></i>
              <% end %>
              <%= link_to [:destroy_modal, office, template], remote: true, class: 'no-decoration me-1' do %>
                <i class="fa fa-trash text-danger"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
