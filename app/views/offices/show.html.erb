<% breadcrumb :office, current_office %>
<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class='col-12 mb-4'>
        <div class="card">
          <div class="card-body">
            <div class="row mb-2">
              <div class="col-md-7">&nbsp;</div>
              <div class="col-md-5">
                <% search_params = @params.merge({
                    slug: current_office.slug
                   })
                %>
                <%= form_tag office_path(search_params), method: :get, class: 'float-end' do %>
                  <div class='input-group'>
                    <%= search_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search', aria: { label: 'Search instance' } %>
                    <%= submit_tag 'Search', class: 'btn btn-sm btn-primary' %>
                  </div>
                <% end %>
              </div>
            </div>
            <table class='table table-striped table-borderless table-hover'>
              <thead>
                <tr>
                  <th>Model</th>
                  <th>Instances</th>
                  <th>Documents</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @data_models.all.each do |model| %>
                  <tr>
                    <td>
                      <%= link_to model.name, office_data_model_instances_path(data_model_id: model.id, office_slug: current_office.slug), class: '' %>
                    </td>
                    <td>
                      <%= model.instances.count %>
                    </td>
                    <td>
                      <%= model.documents.count %>
                    </td>
                    <td>
                      <%= link_to new_office_data_model_instance_path(model.id, office_slug: current_office.slug), class: 'float-end me-2' do %>
                      <i class="fa fa-circle-plus me-1"></i>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @data_models %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-3">
          <div class="card-body h-40">
            <h5>Recent Documents</h5>
            <table class="table table-hover">
              <% current_office.documents.last(5).each do |doc| %>
                <tr>
                  <td>
                    <%= link_to [current_office, doc.instance] do%>
                      <div>
                        <%= doc.name %>
                      </div>
                      <small>
                        <%= doc.instance.data_model.name %>
                      </small>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card mb-3">
          <div class="card-body h-100">
            <h5>Recent Instances</h5>
            <table class='table table-hover'>
              <% current_office.instances.last(5).each do |instance| %>
                <tr>
                  <td>
                    <%= link_to instance.properties.first&.value || 'New', [current_office, instance]%>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
