<div class="col-12">
  <div class="card">
    <div class="card-body">
      <%= link_to [:new, current_office, :member], remote: true, class: 'btn btn-info btn-sm' do %>
        <i class="fa fa-circle-plus me-1"></i> Add
      <% end %>
      <table class='table table-striped'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Joined at</th>
            <th>Status</th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          <% members.each do |member| %>
            <tr>
              <td>
                <%= member.user.email %>
              </td>
              <td id='member-role-<%= member.id %>'>
                <%= render 'members/member_role', member: member, office: current_office %>
              </td>
              <td>
                <%= member.created_at.strftime('%b %d, %Y')%>
              </td>
              <td>
                <%= member.member_status.capitalize %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
