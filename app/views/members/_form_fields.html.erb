<div class="form-group mb-2">
  <%= f.label :user_id, class: 'form-field' %>
  <%= f.select :user_id, [], { include_blank: true },
    class: 'form-control',
    prompt: 'Search user',
    placeholder: 'Search user by email',
    'data-controller': 'user-search',
    'data-user-search-office-slug-value': current_office.slug %>
</div>

<div class="form-group mb-2">
  <%= f.label :member_role, 'Role', class: 'form-field' %>
  <%= f.select :member_role,
    options_for_select(
      Member.member_roles.collect { |role| [role[0].capitalize, role[0]]},
      @member.member_role
    ),
    {},
    class: 'form-control'
  %>
</div>
